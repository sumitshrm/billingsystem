        		var data = $('#grid').jqxGrid('getrowdata', (i));
        		$("#selectedGrid").jqxGrid('addrow', null, data);
        	}
        	

        }
        
        function addParentItems(grid, field, value, selectField) {
        	var code = value.substr(0, value.lastIndexOf('.'));
        	if(code.split(".").length&gt;1){
